alunos = {}

while(True):
    operacao = int(input("\n==========\n\nSelecione a operacao desejada:\n\n\t1: adicionar aluno\n\t2: exibir aluno\n\t3: remover aluno\n\t4: exibir lista de alunos\n\t5: remover todos os alunos \n\t6: cadastrar nota\n\t7: sair\n\nOperacao> "))
    if operacao == 1:
            nome = input("Nome do aluno> ")   
            alunos[nome] = []

    elif operacao == 2:
        nome_aluno = input("Nome do aluno> ")
        """for ch, val in alunos.items():
            if ch == nome:
                print(f"{nome_aluno}: alunos{nome_aluno}")    
            existe == True
            break"""
        if nome_aluno in alunos:
            print(f"{nome_aluno}: {alunos[nome_aluno]}")
        else:
            print("Erro: Aluno não encontrado!")
            
    elif operacao == 3:
        nome_remover = input("Digite o nome do aluno a remover> ")
        existe = False
        """for ch, _ in alunos.items():
            if ch == nome_remover:
                del alunos[nome_remover]                
            existe = True
            print("Aluno removido com sucesso!")
            break
        if not existe:
            print("Erro: aluno nao cadastrado!)"""
        if nome_remover in alunos:
            del alunos[nome_remover]
            print("Aluno removido com sucesso!")
        else:
            print("Erro: Aluno não encontrado!")
            
    elif operacao == 4:
        for ch, val in alunos.items():
            print(f"{ch}: {val}")
            
    elif operacao == 5:
        alunos = {}
        
    elif operacao == 6:
        aluno_nome = input("Nome do aluno> ")
        if aluno_nome in alunos:
            add_nota = float(input("Nota> "))
            print(f"Nota> {add_nota} adicionada.")
            if 0.0 <= add_nota <= 10.0:
                alunos[aluno_nome].append(add_nota)
        else:
            print("Erro: Aluno não encontrado!")

    elif operacao == 7:
        exit()
    else:
        print("Erro: operacao desconhecida!")
