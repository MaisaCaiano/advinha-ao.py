import random
numero_adv = random.randint(1, 100)
tentativas = 10
acertou = True

while acertou == True:
  numero = int(input("Advinhe o numero de 1 a 100: "))
  
  if numero == numero_adv:
    print("Voce acertou!")
    acertou = False

  tentativas -=1
  s = None
  if tentativas > 1:
    s = "s"
  else:
    s = ""

  if tentativas == 0:
    print(f"As tentativas acabaram. O numero era {numero_adv}")
    acertou = False
  
  if numero <=0:
    print("O numero digitado é invalido")

  if tentativas > 0:  
    if numero != numero_adv:
        print(f"Você errou, restam {tentativas} tentativa{s}..")

    if tentativas > 0:
        if numero > numero_adv:
            print("Mais baixo")
        if numero < numero_adv:
            print("Mais alto")
